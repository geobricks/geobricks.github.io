<script type='text/x-handlebars-template' id='structure'>
    <div class='container'>
        <div data-role='header'>
            <div class='row'>
                <div class='col-xs-2'>
                    &nbsp;
                </div>
                <div class='col-xs-8'>
                    <div class='col-xs-3'>
                        <i class='fa fa-home'></i> Home
                    </div>
                    <div class='col-xs-3'>
                        <i class='fa fa-cogs'></i> Projects
                    </div>
                    <div class='col-xs-3'>
                        <i class='fa fa-archive'></i> Containers
                    </div>
                    <div class='col-xs-3'>
                        <i class='fa fa-users'></i> Team
                    </div>
                </div>
                <div class='col-xs-2'>
                    &nbsp;
                </div>
            </div>
        </div>
        <hr>
        <div data-role='content'>
            <div class='row'>
                <div class='col-xs-4'>
                    <img src='images/apollo.png' class='img-responsive' style='width: 75%; heigth: 75%;'>
                </div>
                <div class='col-xs-8'>
                    <div class='row'>
                        <div class='col-xs-12'>
                            <h1>
                                Welcome to Geobricks.
                            </h1>
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-xs-12'>
                            <h3>
                                Everything you need to acquire, manipulate and visualize geospatial information. In one convenient place.
                            </h3>
                        </div>
                    </div>
                    <br>
                    <div class='row'>
                        <div class='col-xs-12'>
                            <button class='btn btn-primary btn-lg' style='width: 100%;'>
                                Discover our Projects
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class='row'>
                <div class='col-xs-12 text-center'>
                    <h1>
                        Projects
                    </h1>
                    <small>
                        Open source solutions for web GIS.
                    </small>
                </div>
            </div>
            <br>
            <div class='row'>
                {{#each projects}}
                    {{#if_is_row @index}}
                    <div class='row'>
                    {{/if_is_row}}
                    <div class='col-xs-4'>
                        <div class='panel panel-default'>
                            <div class='panel-heading'>
                                <b>
                                    <a target='_blank' href='{{this.html_url}}'>
                                        {{this.name}}
                                    </a>
                                </b>
                            </div>
                            <div class='panel-body'>
                                {{this.description}}
                            </div>
                            <div class='panel-footer'>
                                <div class='row'>
                                    <div class='col-xs-6'>
                                        <iframe src="https://ghbtns.com/github-btn.html?user=geobricks&repo={{this.name}}&type=star&count=true" frameborder="0" scrolling="0" width="170px" height="20px"></iframe>
                                    </div>
                                    <div class='col-xs-6'>
                                        <iframe src="https://ghbtns.com/github-btn.html?user=geobricks&repo={{this.name}}&type=fork&count=true" frameborder="0" scrolling="0" width="170px" height="20px"></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#if_is_row @index}}
                    </div>
                    {{/if_is_row}}
                {{/each}}
            </div>
        </div>
        <hr>
        <div data-role='footer'>
            <div class='row'>
                <div class='col-xs-12 text-center'>
                    Â© Geobricks 2011-2015. All rights reserved.
                </div>
            </div>
        </div>
    </div>
</script>