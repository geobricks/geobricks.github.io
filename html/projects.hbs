<script type='text/x-handlebars-template' id='structure'>
    <div class='container bg-muted'>
        <section id='header'>
            <div class='hidden-xs hidden-sm hidden-md hidden-print'>
                <br>
                <div data-role='header'>
                    <div class='row'>
                        <div class='col-lg-12 pull-right'>
                            <span class='pull-right text-right menu-item'>
                                <a href='#home'>
                                    <i class='fa fa-home'></i> Home
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr>
        <div data-role='content'>
            <section id='projects_home'>
                <div class='row'>
                    <div class='col-lg-4 hidden-xs hidden-sm hidden-md hidden-print'>
                        <center>
                            <img src='images/github.png' class='img-responsive img-circle' style='width: 150px; heigth: 150px;'>
                        </center>
                    </div>
                    <div class='col-lg-8'>
                        <div class='row'>
                            <div class='col-lg-12'>
                                <h1>
                                    Browse Geobricks Projects
                                </h1>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-lg-12'>
                                <p style='font-size: 22px; font-weight: 100;'>
                                    Everything we made so far. In <b>one</b> convenient place.
                                </p>
                            </div>
                        </div>
                        <!--<br>-->
                    </div>
                </div>
            </section>
            <hr>
            <section id='projects'>
                <div class='row'>
                    <div class='col-lg-12 text-center'>
                        <h1>
                            Projects
                        </h1>
                        <small>
                            Open source solutions for web GIS.
                        </small>
                    </div>
                </div>
                <br>
                <div class='row'>
                    {{#each projects}}
                        <div class='col-lg-4'>
                            <div class='panel panel-primary'>
                                <div class='panel-heading'>
                                    <i class='fa fa-external-link'></i>
                                    <b>
                                        <a target='_blank' href='{{this.html_url}}'>
                                            {{this.name}}
                                        </a>

                                    </b>
                                    <span class='pull-right'>
                                        <var>
                                            {{this.language}}
                                        </var>
                                    </span>
                                </div>
                                <div class='panel-body'>
                                    {{{this.description}}}
                                </div>
                                <div class='panel-footer'>
                                    <div class='row' style='padding-right: 0px;'>
                                        <div class='col-lg-12 pull-right' style='padding-right: 0px;'>
                                            <span class='pull-right text-right'>
                                                <iframe src="https://ghbtns.com/github-btn.html?user=geobricks&repo={{this.name}}&type=star&count=true" frameborder="0" scrolling="0" width="80px" height="20px"></iframe>
                                            </span>
                                            <span class='pull-right text-right'>
                                                <iframe src="https://ghbtns.com/github-btn.html?user=geobricks&repo={{this.name}}&type=fork&count=true" frameborder="0" scrolling="0" width="80px" height="20px"></iframe>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </section>
            <section id='footer'>
                <div data-role='footer' class='footer'>
                    <div class='row'>
                        <div class='col-lg-12 text-center'>
                            Â© Geobricks 2015. All rights reserved.
                        </div>
                    </div>
                </div>
            </section>
            <hr>
        </div>
    </div>
</script>